{
  "name": "grape-ceramics",
  "version": "1.0.0",
  "description": "React + Vite + Netlify functions monorepo",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "netlify dev",
    "client:dev": "npm run dev --prefix client",               
    "build": "npm run build:server && npm run build:client",
    "build:client": "npm ci --prefix client && npm run build --prefix client",
    "build:server": "npm ci --prefix server && npm run build --prefix server",
    "deploy": "npm run build && netlify deploy --prod"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.19",
    "@types/node-cache": "^4.1.3",
    "@types/react-slick": "^0.23.13",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "netlify-cli": "^22.2.1",
    "prettier": "3.4.2",
    "ts-jest": "^29.2.5",
    "typescript-eslint": "^8.21.0"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "node-cache": "^5.1.2",
    "react-slick": "^0.31.0",
    "serverless-http": "^3.2.0",
    "slick-carousel": "^1.8.1"
  }
}
